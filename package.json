{
  "name": "social-commerce-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "npm run dev:start --workspace=@social-commerce/backend",
    "dev:frontend": "npm run dev --workspace=@social-commerce/frontend",
    "build": "npm-run-all --parallel build:*",
    "build:backend": "npm run build --workspace=@social-commerce/backend",
    "build:frontend": "npm run build --workspace=@social-commerce/frontend",
    "build:shared": "npm run build --workspace=@social-commerce/shared"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}