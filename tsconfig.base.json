{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      // Use built output of shared to avoid cross-rootDir compilation
      "@social-commerce/shared": ["packages/shared/dist", "../../packages/shared/dist"],
      "@social-commerce/shared/*": ["packages/shared/dist/*", "../../packages/shared/dist/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}